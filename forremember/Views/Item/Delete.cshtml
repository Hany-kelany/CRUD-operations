@model Item
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeleteItem">
    <input asp-for="Id" hidden/>
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
  
        <div class="mb-3">
            <label asp-for=Name> Name</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for=Price> Price</label>
            <input asp-for="Price" disabled class="form-control" />

        </div>

        <button type="submit" class="btn btn-primary" style="width:150px"> Delete</button>
        <a asp-controller="Item" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to items</a>
    </div>


</form>
